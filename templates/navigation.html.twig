{% block navigation %}
    {% set auth = false %}
    {% set currentPath = path(app.request.attributes.get('_route'),
    app.request.attributes.get('_route_params')) %}
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top col-xs-4">
        <div class="container justify-content-between">
            <a class="navbar-brand" href="#">Sport feed</a>
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a href="/football" class="nav-link {{ currentPath == '/football' ? 'active' : '' }}">Football</a>
                </li>
                <li class="nav-item">
                    <a href="/basketball"
                       class="nav-link {{ currentPath == '/basketball' ? 'active' : '' }}">Basketball</a>
                </li>
                <li class="nav-item">
                    <a href="/hockey" class="nav-link {{ currentPath == '/hockey' ? 'active' : '' }}">Hockey</a>
                </li>
                {% if auth %}
                    <li class="ml-4 nav-item">
                        <a class="btn btn-light" href="#" id="logout">Logout</a>
                    </li>
                {% else %}
                    <li class="ml-4 nav-item">
                        <button class="btn btn-outline-info" id="login">Login</button>
                    </li>
                    <li class="ml-2 nav-item">
                        <button class="btn btn-light" id="register">Register</button>
                    </li>
                {% endif %}
            </ul>
        </div>
    </nav>
{% endblock %}